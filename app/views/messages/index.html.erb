<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
     
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
<div class="form-horizontal" role="form">
    <%= form_for(@message) do |f| %>
      <div class="form-group">
        <label for="message_name" class="col-md-1 control-label">名前</label>
        <div class="col-md-11">
          <%= f.text_field :name  , :class=> "form-control" %>
        </div>
      </div>
      <div class="form-group" >
        <label for="message_body" class ="col-md-1 control-label">内容</label>
        <div class="col-md-11">
          <%= f.text_area :body , :class=> "form-control" ,:rows=>"4" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    <% end %>
</div>
